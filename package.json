{
  "name": "binance-price-watch-v2",
  "displayName": "binance-price-watch-v2",
  "description": "Visual Studio Code extension for display coin contract price via binance API",
  "version": "1.5.6",
  "publisher": "es",
  "keywords": [
    "btc",
    "eth",
    "binance",
    "vscode"
  ],
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension",
  "contributes": {
    "configuration": {
      "properties": {
        "binance-price-watch-v2.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable display price"
        },
        "binance-price-watch-v2.updateOnFocus": {
          "type": "boolean",
          "default": true,
          "description": "Update only on focus"
        },
        "binance-price-watch-v2.symbol": {
          "type": "string",
          "default": "btcusdt",
          "minLength": 1,
          "description": "Configuring coin that need to monitor"
        },
        "binance-price-watch-v2.symbolText": {
          "type": "string",
          "default": "btc",
          "description": "Abbreviation"
        },
        "binance-price-watch-v2.updateInterval": {
          "type": "number",
          "default": 3000,
          "minimum": 1000,
          "description": "Configuring polling requests the latest data time interval, Unit: milliseconds"
        },
        "binance-price-watch-v2.url": {
          "type": "string",
          "default": "https://fapi.binance.com/fapi/v1/ticker/price",
          "format": "uri",
          "description": "Configuring contract base API, (try not to modify)"
        },
        "binance-price-watch-v2.comparisonPrice": {
          "type": "string",
          "default": "",
          "description": "Calculate the real-time price and what the profit is for the price you setã€‚\n(direction:up|down)\nexample: \n[{\"symbol\":\"btcusdt\",\"price\":60000,\"leverage\":25,\"direction\":\"up\"}]\n"
        },
        "binance-price-watch-v2.tickers": {
          "type": "array",
          "description": "list of ticker settings",
          "items": {
            "type": "object",
            "properties": {
              "symbol": {
                "type": "string",
                "default": "BTC"
              },
              "currency": {
                "type": "string",
                "default": "USDT"
              },
              "exchange": {
                "type": "string",
                "default": "CCCAGG"
              },
              "template": {
                "type": "string",
                "default": "{symbol}:{price}"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "release": "standard-version"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "eslint": "^4.11.0",
    "standard-version": "^9.5.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bignumber.js": "^9.1.2",
    "open": "^6.4.0",
    "uuid": "^9.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chenchenwuai/vscode-binance-price-watch"
  },
  "__npminstall_done": false
}
